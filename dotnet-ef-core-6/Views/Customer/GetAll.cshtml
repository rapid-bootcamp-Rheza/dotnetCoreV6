@model IEnumerable<dotnet_ef_core_6.DataContext.CustomerEntity>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";

}

<div>
    <h2>Customer Get All</h2>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Address</th>
                <th>City</th>
                <th>Province</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.CustomerName</td>
                    <td>@item.Gender</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.Province</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-success">View</a>
                        <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <a asp-action="Add" class="btn btn-sm btn-primary">Add</a>
    </table>

</div>
