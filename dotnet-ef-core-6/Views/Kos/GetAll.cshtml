@model IEnumerable<dotnet_ef_core_6.DataContext.KosEntity>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";

}

<div>
    <h2>Kos Get All</h2>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Status Perkawinan</th>
                <th>Harga Sewa (Bulan)</th>
                <th>Jenis Kamar Kos</th>
                <th>Waktu Tinggal (Bulan)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NamaPenyewa</td>
                    <td>@item.Gender</td>
                    <td>@item.Status</td>
                    <td>@item.Sewa</td>
                    <td>@item.JenisKos</td>
                    <td>@item.LamaSewa</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <a asp-action="Add" class="btn btn-sm btn-primary">Add</a>
    </table>

</div>
